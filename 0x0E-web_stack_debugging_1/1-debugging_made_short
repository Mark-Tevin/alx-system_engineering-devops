#!/usr/bin/env bash
# service (init) must say that nginx is not running ← for real
service nginx start && ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
nginx_pid=$(pgrep 'nginx' | head -1) && [ -n "$nginx_pid" ] && kill "$nginx_pid"
pgrep 'nginx' > /dev/null && nginx -s stop
